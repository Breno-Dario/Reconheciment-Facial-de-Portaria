{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-up",
            "type": "shell",
            "command": "docker",
            "args": [
                "compose",
                "-f",
                "docker-compose.yml",
                "up",
                "-d",
                "--build"
            ],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "docker-down",
            "type": "shell",
            "command": "docker",
            "args": [
                "compose",
                "-f",
                "docker-compose.yml",
                "down"
            ],
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
